<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nombreReceta"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Plato Ejemplo"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgReceta"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/detallesReceta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:text="Esta receta viene del paÃ­s x y ha ganado mucha popularidad porque y..." />


    </LinearLayout>

    <TextView
        android:id="@+id/infoReceta"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Popularidad: x"
        android:gravity="center"></TextView>



</LinearLayout>